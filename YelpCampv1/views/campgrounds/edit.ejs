<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>
        <div class="col-md-12">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="form-signin" enctype="multipart/form-data">
                <label for="name" class="sr-only">Name</label>
                <input type="text" id="name" name="name" class="form-control formtext-top" value="<%= campground.name %>" autofocus>
                <label for="image" class="sr-only">Image</label>
                <input type="file" id="image" class="form-control formtext-middle" name="image" accept="image/*">
                <label for="price" class="sr-only">Price</label>
                <input type="number" id="price" name="price" class="form-control formtext-middle" value="<%=campground.price%>" min="0.01" step="0.01">
                <label for="desc" class="sr-only">Description</label>
                <textarea name="desc" id="desc" class="form-control formtext-middle"><%=campground.desc %></textarea>
                <label for="location" class="sr-only">Location</label>
                <input type="text" id="location" name="location" class="form-control formtext-bottom" value="<%= campground.location %>">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </form>
            <div class="form-signin">
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>