<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Sign Up</h1>
        </div>
        <div class="col-md-12">
            <form action="/register" method="post" class="form-signin form-contact">
                <div class="text-center">
                    <img class="mb-4" src="" alt="" width="128" height="128">
                </div>
                <h3 class="h3 mb-3 font-weight-normal">Please sign up</h3>
                <label for="firstName" class="sr-only">First Name</label>
                <input type="text" id="firstName" name="firstName" class="form-control formtext-top" placeholder="First Name" required autofocus>
                <label for="lastName" class="sr-only">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="form-control formtext-middle" placeholder="Last Name" required>
                <label for="username" class="sr-only">Username</label>
                <input type="text" is="username" name="username" class="form-control formtext-middle" placeholder="Username" required minlegth="4">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control formtext-middle" placeholder="Password" required minlegth="8">
                <label for="email" class="sr-only">Email</label>
                <input type="email" id="email" name="email" class="form-control formtext-middle" placeholder="Email Address" required>
                <label for="desc" class="sr-only">Description</label>
                <textarea id="desc" name="desc" class="form-control formtext-middle" placeholder="About Yourself"></textarea>
                <label for="avatar" class="sr-only">Avatar URL</label>
                <input type="text" id="avatar" name="avatar" class="form-control formtext-middle" placeholder="Avatar URL">
                <label for="adminCode" class="sr-only">Admin Code</label>
                <input type="text" id="adminCode" name="adminCode" class="form-control formtext-bottom" placeholder="Admin Code">
                <div class="form-group">
                    <div id="captcha" class="g-recaptcha form-group" data-sitekey=""></div>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
            </form>
            
            <div class="form-signin form-contact">
                <a href="/forgot">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>